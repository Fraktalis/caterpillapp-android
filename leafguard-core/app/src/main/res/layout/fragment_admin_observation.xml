<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fraktalis.caterpillapp.leafguard_core.fragment.admin.AdminObservationFragment">

    <TextView
        android:id="@+id/downloadObservationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/observation_download_description"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/observationHaveChanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/downloadObservationButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_margin="8dp"
        android:drawableEnd="@android:drawable/stat_sys_download"
        android:drawableRight="@android:drawable/stat_sys_download"
        android:text="@string/download_observation_action" />

    <ProgressBar
        android:id="@+id/observationProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone" />
</LinearLayout>
