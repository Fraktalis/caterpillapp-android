<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fraktalis.caterpillapp.leafguard_core">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconeleafguar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.HomeActivity" />
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fraktalis.caterpillapp.leafguard_core.OakListActivity"
            android:label="@string/title_activity_oak_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fraktalis.caterpillapp.leafguard_core.ProfileActivity"
            android:label="@string/title_activity_profil_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.OakActivity" />
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.CaterpillarListActivity"></activity>
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.CaterpillarViewActivity"></activity>
        <activity
            android:name="com.fraktalis.caterpillapp.leafguard_core.AdminActivity"
            android:label="@string/title_activity_admin"
            android:parentActivityName="com.fraktalis.caterpillapp.leafguard_core.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fraktalis.caterpillapp.leafguard_core.HomeActivity" />
        </activity>
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.ForgotPasswordActivity" />
        <activity android:name="com.fraktalis.caterpillapp.leafguard_core.LanguageActivity"></activity>
        <activity
            android:name=".fragment.admin.MapsActivity"
            android:label="@string/title_activity_maps" />
        <service
            android:name="com.fraktalis.caterpillapp.leafguard_core.service.ObservationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.fraktalis.caterpillapp.leafguard_core.LeavesObservationActivity"
            android:label="@string/title_activity_leaves_observation"
            android:parentActivityName="com.fraktalis.caterpillapp.leafguard_core.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fraktalis.caterpillapp.leafguard_core.HomeActivity" />
        </activity>
        <activity
            android:name="com.fraktalis.caterpillapp.leafguard_core.LeavesViewActivity"
            android:label="@string/title_activity_leaves_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>
</manifest>